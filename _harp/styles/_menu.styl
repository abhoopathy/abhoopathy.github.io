.menu
    margin vr-block(1.5) 0
    j-column(4/8, offset: 2/8)

.menu.menu--portfolio-nav
    j-column(10/12, offset: 1/12)
    .menu__item
        j-column(1/2)
        &:first-child
            text-align left
        &:last-child
            text-align right

.menu__item
    text-align center
    font-size vr-block(7/16)
    font-weight 500
    text-transform uppercase
    j-column(1/3)
    a
        color mix($text-color, $bg-color, 20%)
        padding-bottom .1rem
        &:hover
            color $clay-color
    &.menu__item--active
        a
            color $text-color
            border-bottom 1px solid white
